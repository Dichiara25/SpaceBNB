{% extends 'base.html.twig' %}

{% block title %}Propriétaire{% endblock %}

{% block body %}
    <h1>Annonces en ligne</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Capacité</th>
                <th>Superficie</th>
                <th>Prix</th>
                <th>Adresse</th>
                <th>Région</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.summary }}</td>
                <td>{{ room.description }}</td>
                <td>{{ room.capacity }}</td>
                <td>{{ room.superficy }}</td>
                <td>{{ room.price }}</td>
                <td>{{ room.address }}</td>
                <td>{{ room.region.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('room_show', {'id': room.id}) }}" role="button">Voir</a>
                    <a class="btn btn-primary" href="{{ path('room_edit', {'id': room.id}) }}" role="button">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune chambre mise en ligne pour l'instant.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-danger" href="{{ path('room_new') }}" role="button">Créer une annonce</a>

    <a class="btn btn-secondary" href="{{ path('welcome') }}" role="button">Retour</a>
{% endblock %}
